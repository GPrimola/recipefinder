<h1>Searching for - <%= @search_term %></h1>
<h2>Recipes</h2>
<table border="1">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Social Rank</th>
		</tr>
	</thead>
	<tbody>
		<% @recipes.each do |recipe| %>

		<tr>
			<td><%= link_to image_tag( recipe['image_url'], size: "100" ), recipe['f2f_url'], target: '_blank' %></td>
			<td><%= link_to sanitize( recipe['title'] ), recipe['f2f_url'], target: '_blank' %></td>
			<td><%= recipe['social_rank'] %></td>
		</tr>

		<% end %>
	</tbody>

</table>
